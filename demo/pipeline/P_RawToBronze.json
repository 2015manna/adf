{
	"name": "P_RawToBronze",
	"properties": {
		"activities": [
			{
				"name": "Copy from Raw to Bronze layer",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Delete Previous Data",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"additionalColumns": [
							{
								"name": "FileName",
								"value": "$$FILENAME"
							},
							{
								"name": "LoadDate",
								"value": "@utcnow()"
							}
						],
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"wildcardFolderPath": "raw/Product Database",
							"wildcardFileName": "*.csv",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "FlattenHierarchy"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "Order ID",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "OrderID",
									"physicalType": "UTF8"
								}
							},
							{
								"source": {
									"name": "Product",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "Product",
									"type": "String",
									"physicalType": "UTF8"
								}
							},
							{
								"source": {
									"name": "Quantity Ordered",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "QuantityOrdered",
									"physicalType": "UTF8"
								}
							},
							{
								"source": {
									"name": "Price Each",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "PriceEach",
									"physicalType": "UTF8"
								}
							},
							{
								"source": {
									"name": "Order Date",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "OrderDate",
									"physicalType": "UTF8"
								}
							},
							{
								"source": {
									"name": "Purchase Address",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "PurchaseAddress",
									"physicalType": "UTF8"
								}
							},
							{
								"source": {
									"name": "FileName",
									"type": "String"
								},
								"sink": {
									"name": "FileName",
									"type": "String",
									"physicalType": "UTF8"
								}
							},
							{
								"source": {
									"name": "LoadDate",
									"type": "String"
								},
								"sink": {
									"name": "LoadDate",
									"type": "String",
									"physicalType": "UTF8"
								}
							}
						],
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ADLDelimitedTextFile",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ADLParquet",
						"type": "DatasetReference",
						"parameters": {
							"FolderPath": "bronze/ProductDatabase"
						}
					}
				]
			},
			{
				"name": "Delete Previous Data",
				"type": "Delete",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "ADLParquet",
						"type": "DatasetReference",
						"parameters": {
							"FolderPath": "bronze/ProductDatabase"
						}
					},
					"enableLogging": false,
					"storeSettings": {
						"type": "AzureBlobFSReadSettings",
						"recursive": true,
						"wildcardFileName": "*.parquet",
						"enablePartitionDiscovery": false
					}
				}
			}
		],
		"folder": {
			"name": "bigdatatestingdemo"
		},
		"annotations": []
	}
}